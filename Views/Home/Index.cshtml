@model _1911061972_NguyenBinhAn_BigSchool.Models.CoursesListViewModel
@{
    ViewBag.Title = "Home Page";
}
<head>
    
</head>

<body>
    
    <ul class="course">
        @{var i = 0;
            foreach (var course in Model.UpCourses)
            {

                if (!course.IsCanceled)
                {
                    <li>
                        <div class="date">
                            <div class="month">@course.datetime.ToString("MM")</div>
                            <div class="day">@course.datetime.ToString("dd")</div>
                        </div>

                        <div class="details">
                            <div class="lecturer">
                                @course.Lecturer.name
                                @if (Model.showButton)
                                {
                                    if (Model.showFollow[i])
                                    {
                                        <button class="btn btn-link js-toggle-following" data-user-id="@course.LecturerId">following</button>}
                                    else
                                    {
                                        <button class="btn btn-link js-toggle-following" data-user-id="@course.LecturerId">follow</button>
                                    }
                                }
                            </div>
                            <div class="category">@course.Category.name</div>
                            @if (Model.showButton)
                            {
                                if (Model.showAtend[i])
                                {
                                    <button data-course-id="@course.Id" class="btn btn-primary btn-sm js-toggle-attendance" style="margin-right:15px;">Going</button>}
                                else
                                {
                                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance" style="margin-right:15px;">Going?</button>}

                            }
                            @Html.RouteLink("details", new { Controller = "Courses", Action = "Details", id = course.Id })
                        </div>

                    </li>
                    i++;
                }
            }
        }
    </ul>

    @section scripts{
        <script src="~/MyScripts/MyJs.js"></script>
    }
</body>  
    