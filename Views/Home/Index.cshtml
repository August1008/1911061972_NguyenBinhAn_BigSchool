@model IEnumerable<_1911061972_NguyenBinhAn_BigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}
<head>
    
</head>

<body>

    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">@course.datetime.ToString("MM")</div>
                    <div class="day">@course.datetime.ToString("dd")</div>
                </div>

                <div class="details">
                    <div class="lecturer">@course.Lecturer.name</div>
                    <div class="category">@course.Category.name</div>
                    <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                </div>

            </li>
        }
    </ul>
    
    @section scripts{
        <script src="~/MyScripts/Attendance.js"></script>
        }
</body>  
    